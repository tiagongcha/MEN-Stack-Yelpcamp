<% include partials/header %>
<div class="container-fluid">
<!-- nav bar -->
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">YelpCamp</a>
		<div class = "collapse navbar-collapse" id="navbarSupportedContent">
			<!-- links in the nav bar -->
			<ul class="nav navbar-nav">
				<li class="nav-item">
					<a href="/">Home</a>
				</li>
				<li class="nav-item" style="margin-left:20px">
					<a href="">External Sources</a>
				</li>			
			</ul>
			<!-- float right nav items -->
			<ul class="nav navbar-nav ml-auto">
				<li style="margin-right: 20px">
					<a href="#">Login</a>
				</li>
				<li style="margin-right: 20px">
					<a href="#">Logout</a>
				</li>
							
			</ul>
			<!-- float right nav form -->
			<ul class="nav navbar-nav ">
				<form class="form-inline my-2 my-lg-0 " >
      				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
     			 	<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    			</form>	
			</ul>		
		</div>
	</nav>
<!-- jumbotron text box -->
  <div class="container">
	<div class="jumbotron text-center">
		<h1>All Camping Tips Ideas</h1>
		<p>Browser New Ideas For Your Next Camping Trip</p>
		<a class="btn btn-primary btn-lg" href="/campground/newCamp">Suggest New Campground</a>
	</div>
<!-- photo gallery -->
	<div class="row">
		<% campgrounds.forEach(function(x){ %>		
			<div class="col-md-3">
				<div class="thumbnail">
					<img class="img-thumbnail img-fluid" src="<%= x.img %>" style="width:100%">
					<div class="caption">
						<p> <%= x.name %></p>
					</div>
				</div>
			</div>					
		<% }); %>
	</div>	
	</div>
</div>

<% include partials/footer %>
	
